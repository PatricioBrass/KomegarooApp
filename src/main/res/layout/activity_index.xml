<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_index"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kome.hp.komegarooandroid.IndexActivity"
    android:weightSum="1" android:gravity="bottom">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:layout_weight="1.00">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent" app:srcCompat="@drawable/portada_usuario"
            android:id="@+id/imageView6" android:scaleType="centerCrop" android:layout_weight="1.00"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_alignParentEnd="true" android:layout_alignParentStart="true"
            android:layout_height="100dp">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/login"
                android:background="@drawable/ingresar"
                android:layout_weight="1"
                android:layout_marginLeft="20dp" android:layout_marginTop="25dp"
                android:layout_marginBottom="25dp" android:layout_marginRight="8dp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/registro"
                android:background="@drawable/registrarse"
                android:layout_weight="1"
                android:layout_marginRight="20dp" android:layout_marginBottom="25dp"
                android:layout_marginTop="25dp" android:layout_marginLeft="8dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
