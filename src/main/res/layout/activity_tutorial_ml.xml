<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_tutorial_ml"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuLaterales.TutorialMLActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.view.ViewPager
            android:id="@+id/viewPagerML"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
        />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnCloseTuto"
                style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|end"
                android:text="Volver"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:gravity="bottom">
                <me.relex.circleindicator.CircleIndicator
                    android:id="@+id/indicatorML"
                    android:layout_width="match_parent"
                    android:layout_height="48dp" android:orientation="horizontal"
                />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
