<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="fill_parent"
             android:layout_height="fill_parent"
             android:clickable="true"
             tools:context="com.kome.hp.komegarooandroid.Fragment.PopupFragment"
             android:background="@color/cast_intro_overlay_background_color"
             android:gravity="center"
             android:id="@+id/popup">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_alignTop="@+id/etOrigin" android:layout_centerHorizontal="false"
        android:orientation="vertical" android:visibility="visible"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_margin="25dp" android:background="@color/white">

        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                      android:orientation="vertical"
                      android:weightSum="1" android:layout_margin="5dp">


        <TextView
            android:text="EnvÃ­o No Certificado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView13"
            android:textColor="@color/black"
            android:textSize="16sp" android:layout_marginTop="10dp"
            android:layout_marginBottom="2dp" android:layout_marginLeft="15dp"/>
            <View
                android:layout_width="match_parent"
                android:background="@color/morado"
                android:layout_height="2dp" android:layout_marginRight="90dp"
                android:layout_marginLeft="15dp"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:weightSum="1"
                android:layout_marginTop="10dp">
                <ImageView
                    app:srcCompat="@drawable/logo_vertical"
                    android:id="@+id/imageView7" android:layout_marginBottom="20dp"
                    android:layout_width="65dp" android:layout_height="180dp"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <EditText
                        android:inputType="number"
                        android:id="@+id/editTextBlock"
                        android:hint="Block/Depto/Casa/Oficina"
                        android:maxLines="1"
                        android:textColorHint="#838484"
                        android:ellipsize="end"
                        android:textColor="#262626"
                        android:textAlignment="textStart" android:layout_width="match_parent"
                        android:backgroundTint="@color/colorAccent"
                        android:layout_marginBottom="5dp"
                        android:textSize="16sp"
                        android:padding="5dp" android:layout_height="45dp"
                        android:layout_marginTop="40dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView9"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="+56"
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/editTextNumber"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_weight="1"
                            android:backgroundTint="@color/colorAccent"
                            android:ellipsize="end"
                            android:hint="987654321"
                            android:inputType="number"
                            android:maxLines="1"
                            android:paddingLeft="10dp"
                            android:textAlignment="textStart"
                            android:textColor="#262626"
                            android:textColorHint="#838484"
                            android:textSize="16sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:text="Comentarios"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView"
                android:textColor="#262626" android:textAlignment="center"
                android:textSize="18sp"/>
            <EditText
                android:layout_width="match_parent"
                android:ems="10"
                android:id="@+id/editTextComent"
                android:background="@drawable/border2"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:selectAllOnFocus="true"
                android:textAlignment="center"
                android:inputType="textMultiLine"
                android:lines="8"
                android:minLines="6"
                android:gravity="center"
                android:maxLines="10" android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:paddingBottom="5dp" android:paddingTop="5dp"
                android:layout_height="65dp"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_marginTop="5dp" android:layout_height="50dp">
                <Button
                    android:id="@+id/btnCancelar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textSize="20sp" android:textColor="@color/colorAccent"
                    android:text="Cancelar" style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"/>
                <Button
                    android:layout_height="match_parent" android:id="@+id/buttonSolicitar"
                    android:layout_width="match_parent"
                    android:layout_weight="1" android:text="Solicitar"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textSize="20sp" android:textColor="@color/colorAccent"
                    style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
